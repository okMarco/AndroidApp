<resources>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlueDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundBlue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.NoActionBar.White">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWhite</item>
        <item name="colorAccent">@color/colorAccentWhite</item>
        <item name="android:windowBackground">@color/colorBackgroundWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
